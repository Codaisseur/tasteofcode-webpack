{
  "name": "tasteofcode-webpack",
  "version": "1.0.0",
  "description": "Modern JS version of the Balloon game for the Taste of Code with Webpack.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:copy": "cp index.html favicon.ico dist/ && cp src/assets/favicon-* dist/static/",
    "build": "npm run clean && npm run build:webpack && npm run build:copy",
    "start": "node devServer.js",
    "test": "mocha test.js --recursive src/*.test.js src/**/*.test.js src/**/**/*.test.js",
    "test:watch": "mocha -w test.js -G --recursive src/*.test.js src/**/*.test.js src/**/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codaisseur/tasteofcode-webpack.git"
  },
  "keywords": [
    "webpack",
    "tasteofcode",
    "game",
    "balloons"
  ],
  "author": "Wouter de Vos - Codaisseur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Codaisseur/tasteofcode-webpack/issues"
  },
  "homepage": "https://github.com/Codaisseur/tasteofcode-webpack#readme",
  "dependencies": {
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "deep-freeze-node": "^1.1.2",
    "eslint": "^3.12.1",
    "eslint-plugin-babel": "^4.0.0",
    "eventsource-polyfill": "^0.9.6",
    "exports-loader": "^0.6.3",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "ignore-styles": "^5.0.1",
    "imports-loader": "^0.7.0",
    "jquery": "^3.1.1",
    "jsdom": "^9.8.3",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "mocha-eslint": "^3.0.1",
    "node-sass": "^3.13.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "watchify": "^3.7.0",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  }
}
